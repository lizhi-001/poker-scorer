{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2017"],
    "outDir": "./miniprogram",
    "rootDir": "./miniprogram",
    "typeRoots": ["./miniprogram/typings"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["miniprogram/**/*.ts"],
  "exclude": ["node_modules"]
}
